= title "Posts | #{@post.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, model
				= link_to post_path(@post), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")	
			- if can? :update, model
				= link_to edit_post_path(@post), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to posts_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark") 
		.card			
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @post.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.title")
					.display-value.fs-body-1.tc-black-2= @post.title.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.body")
					.display-value.fs-body-1.tc-black-2= @post.body.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.user_id")
					.display-value.fs-body-1.tc-black-2= @post.user_id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.category_id")
					.display-value.fs-body-1.tc-black-2= @post.category_id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.subcategory_id")
					.display-value.fs-body-1.tc-black-2= @post.subcategory_id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.image")
					.display-value.fs-body-1.tc-black-2= @post.image.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.public")
					.display-value.fs-body-1.tc-black-2= @post.public.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.comments_open")
					.display-value.fs-body-1.tc-black-2= @post.comments_open.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.shared_enabled")
					.display-value.fs-body-1.tc-black-2= @post.shared_enabled.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.permalink")
					.display-value.fs-body-1.tc-black-2= @post.permalink.to_s.humanize
