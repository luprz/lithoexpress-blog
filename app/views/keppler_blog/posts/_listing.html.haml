%tr{ id: "row-#{post.id}" }
	- if can? :destroy_multiple, model
		%td.item-check{style:"width: 10%"}
			= link_to "", post_path(post), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{post.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{post.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{post.id}" }

		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.title
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.user_id
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.category_id
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.subcategory_id
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.image
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.public
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.comments_open
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.shared_enabled
		%td{style:"width: 30%"}
			= link_to "", post_path(post, search: @query), remote: true, class: "show-row"
			%span
				= post.permalink
								
	%td{style:"width: 5%"}		
		= link_to post_path(post), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")