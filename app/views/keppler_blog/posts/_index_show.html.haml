.listing-show-header
	.actions
		- if can? :update, model
			= link_to edit_post_path(@post), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light") 
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card
	%ul.list
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.id")
			.display-value= @post.id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.title")
			.display-value= @post.title
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.body")
			.display-value= @post.body
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.user_id")
			.display-value= @post.user_id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.category_id")
			.display-value= @post.category_id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.subcategory_id")
			.display-value= @post.subcategory_id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.image")
			.display-value= @post.image
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.public")
			.display-value= @post.public
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.comments_open")
			.display-value= @post.comments_open
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.shared_enabled")
			.display-value= @post.shared_enabled
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.permalink")
			.display-value= @post.permalink
	

:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});